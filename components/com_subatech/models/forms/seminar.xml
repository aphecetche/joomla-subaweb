<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset name="seminar">
	<field name="id"
		type="hidden"
		label="JGLOBAL_FIELD_ID_LABEL"
		description="JGLOBAL_FIELD_IED_DESC"
		size="10"
		default="0"
		readonly="true"
		class="readonly"
	/>
	<field name="title"
		type="text"
		label="COM_SUBATECH_SEMINAR_TITLE_LABEL"
		description="COM_SUBATECH_SEMINAR_TITLE_DESC"
		class="inputbox"
		size="60"
		required="true"
	/>
	<field name="alias"
		type="text"
		label="JFIELD_ALIAS_LABEL"
		description="JFIELD_ALIAS_DESC"
		class="inputbox"
		size="30"
	/>

	<field name="type"
		type="radio"
		label="COM_SUBATECH_SEMINAR_TYPE_LABEL"
		description="COM_SUBATECH_SEMINAR_TYPE_DESC"
		class="inputbox"
		size="1"
		default="spécialisé"
	>
		<option value="spécialisé">
			COM_SUBATECH_SEMINAR_TYPE_SPECIALISE</option>
		<option value="généraliste">
			COM_SUBATECH_SEMINAR_TYPE_GENERALISTE</option>
		<option value="ITA">
			COM_SUBATECH_SEMINAR_TYPE_ITA</option>
		<option value="soutenance-thèse">
			COM_SUBATECH_SEMINAR_TYPE_SOUTENANCE_THESE</option>
		<option value="communication-scientifique">
			COM_SUBATECH_SEMINAR_TYPE_COMMUNICATION_SCIENTIFIQUE</option>
		<option value="heures-thésards">
			COM_SUBATECH_SEMINAR_TYPE_HEURES_THESARDS</option>
	</field>

	<field name="summary"
		type="editor"
		class="inputbox"
		label="COM_SUBATECH_SEMINAR_SUMMARY_LABEL"
		filter="JComponentHelper::filterText"
		buttons="false"
	/>
		
</fieldset>

<fieldset name="venue">
	<field name="location"
		type="text"
		label="COM_SUBATECH_SEMINAR_LOCATION_LABEL"
		description="COM_SUBATECH_SEMINAR_LOCATION_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
	<field name="date"
		type="calendar"
		label="COM_SUBATECH_SEMINAR_DATE_LABEL"
		description="COM_SUBATECH_SEMINAR_DATE_DESC"
		class="input-medium"
    required="false"
    showtime="true"
    format="%Y-%m-%d %H:%M:%S"
    filter="user_utc"
	/>
</fieldset>

<fieldset name="author">
	<field name="author"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_DESC"
		class="inputbox"
		size="30"
		required="true"
	/>
	<field name="author_url"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_URL_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_URL_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
	<field name="author_filiation"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_DESC"
		class="inputbox"
		size="30"
		required="true"
	/>
	<field name="author_filiation_url"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_URL_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_URL_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>

</fieldset>

<fieldset name="part2">
	<field name="chair"
		type="text"
		label="COM_SUBATECH_SEMINAR_CHAIR_LABEL"
		description="COM_SUBATECH_SEMINAR_CHAIR_DESC"
		class="inputbox"
		size="60"
		required="false"
  />
	<field name="title2"
		type="text"
		label="COM_SUBATECH_SEMINAR_TITLE_LABEL"
		description="COM_SUBATECH_SEMINAR_TITLE_DESC"
		class="inputbox"
		size="60"
		required="false"
    default=""
  />
	<field name="summary2"
		type="editor"
		class="inputbox"
		label="COM_SUBATECH_SEMINAR_SUMMARY_LABEL"
		filter="JComponentHelper::filterText"
		buttons="false"
	/>
	<field name="author2"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
	<field name="author_url2"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_URL_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_URL_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
	<field name="author_filiation2"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
	<field name="author_filiation_url2"
		type="text"
		label="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_URL_LABEL"
		description="COM_SUBATECH_SEMINAR_AUTHOR_FILIATION_URL_DESC"
		class="inputbox"
		size="30"
		required="false"
	/>
</fieldset>

<fieldset name="state">
	<field
			id="state"
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			<option
				value="2">
				JARCHIVED</option>
		</field>
		
			<field
			id="publish_up"
			name="publish_up"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc" />

		<field
			id="publish_down"
			name="publish_down"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc" />

</fieldset>


</form>
