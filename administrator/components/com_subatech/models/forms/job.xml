<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset name="job">
	<field name="id"
		type="hidden"
		label="JGLOBAL_FIELD_ID_LABEL"
		description="JGLOBAL_FIELD_IED_DESC"
		size="10"
		default="0"
		readonly="true"
		class="readonly"
	/>
	
	<field name="title"
		type="text"
		label="COM_SUBATECH_JOB_TITLE_LABEL"
		description="COM_SUBATECH_JOB_TITLE_DESC"
		class="inputbox"
		size="30"
		required="true"
	/>
	<field name="alias"
		type="text"
		label="JFIELD_ALIAS_LABEL"
		description="JFIELD_ALIAS_DESC"
		class="inputbox"
		size="30"
	/>
		<field
			id="state"
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			<option
				value="2">
				JARCHIVED</option>
			<option
				value="-2">
				JTRASHED</option>
		</field>

	<field name="description"
		type="editor"
		class="inputbox"
		label="COM_SUBATECH_JOB_DESCRIPTION_LABEL"
		description="COM_SUBATECH_JOB_DESCRIPTION_DESC"
		filter="JComponentHelper::filterText"
		buttons="true" />

</fieldset>


</form>
